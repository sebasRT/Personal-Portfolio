---
import { Icon } from "astro-icon/components";
import { colors } from "../../styleVariables";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const {
    sr: { [500]: lineColor },
} = colors;
---

<article
    class="flex flex-col gap-5 h-full justify-between items-center overflow-y-scroll overflow-x-hidden mx-auto"
>
    <section
        class="relative w-full max-w-screen-md h-full min-h-[80vh] *:absolute *:rounded-full *:grid *:place-items-center"
    >
        <div
            class="relative top-[10%] right-0 w-52 h-52 *:absolute *:text-[2em] skillSet  *:transition"
        >
            <img
                src="/src/icons/skills/js.svg"
                class="top-[1%] left-[40%] hover:scale-125"
                alt="javascript skill"
            />
            <img
                src="/src/icons/skills/ts.svg"
                class="top-[25%] left-[10%] hover:scale-125"
                alt="typescript skill"
            />
            <img
                src="/src/icons/skills/tailwind.svg"
                class="top-[60%] left-[9%] hover:scale-125"
                alt="tailwind skill"
            />
            <img
                src="/src/icons/skills/sass.svg"
                class="bottom-[1%] right-[40%] overflow-visible hover:scale-125"
                alt="sass skill"
            />
            <img
                src="/src/icons/skills/html.svg"
                class="bottom-[25%] right-[10%] hover:scale-125"
                alt="html skill"
            />
            <img
                src="/src/icons/skills/css.svg"
                class="bottom-[60%] right-[9%] hover:scale-125"
                alt="css"
            />
        </div>
        <div class="top-[19%] w-32 h-32 skillSet">
            <Icon name="skills/reactjs" class="text-[5em] hover:scale-110 transition" />
        </div>
        <div class="top-[45%] left-[40%] w-[6em] h-[6em] skillSet">
            <Icon
                name="skills/nextjs"
                class="text-black text-[6em] bg-white rounded-full border hover:scale-110 transition"
            />
        </div>
        <div class="top-[60%] w-36 h-36 skillSet">
            <img src="/src/icons/skills/nodejs.svg" alt="" class="hover:scale-110 transition"/>
        </div>
        <div class="bottom-[5%] right-[10%] w-36 h-36 skillSet">
            <Icon name="skills/mongodb" class="text-[6em] hover:scale-110 transition" />
        </div>
    </section>
    <section class="w-full">
        <h2 class="font-semibold sm:text-lg md:text-xl mb-4 softSkillsTitle">
            SOFT SKILLS
        </h2>

        <div
            class="relative text-center p-6 font-semibold font-k2d text-sr-100 *:drop-shadow-sm text-xl sm:text-2xl md:text-3xl lg:4 xl *:inline-block *:m-5 *:bg-black/10 *:px-3 *:rounded-full softSkills"
        >
            <span class="text-sr-400">{t("softSkills.timeManagement")}</span>
            <span>{t("softSkills.adaptability")}</span>
            <span>{t("softSkills.collaboration")}</span>
            <span>{t("softSkills.empathy")} </span>
            <span>{t("softSkills.selfDiscipline")}</span>
            <span>{t("softSkills.problemSolving")}</span>
            <span class="text-sr-400"
                >{t("softSkills.BusinessOrientedMindset")}
            </span>
        </div>
    </section>
</article>
<style define:vars={{ lineColor }}>
    .skillSet {
        display: absolute;
        background-color: rgb(21 137 226 / 0.5);
        box-shadow: 0 0 20px 20px rgb(21 137 226 / 0.5);
    }
    .softSkills {
        display: absolute;
        background-color: rgba(12, 66, 108, 0.5);
        box-shadow: 0 0 20px 20px rgba(12, 66, 108, 0.5);
    }
    .softSkillsTitle {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        column-gap: 1rem;
        place-items: center;
    }

    .softSkillsTitle::before,
    .softSkillsTitle::after {
        content: "";
        height: 3px;
        width: 100%;
        background-color: var(--lineColor);
    }
</style>
