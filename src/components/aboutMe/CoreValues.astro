---
import { getLangFromUrl, useTranslations } from "../../i18n/utils";
import { colors } from "../../styleVariables";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const {
    sr: { [500]: lineColor },
} = colors;
---

<section>
    <h2 class="font-semibold sm:text-lg md:text-xl mb-4">CORE VALUES</h2>
    <div
        class="rotate relative text-center font-semibold font-k2d text-sr-500 *:drop-shadow-sm text-xl sm:text-2xl md:text-3xl lg:4 xl *:inline-block *:m-5 *:bg-white/10 *:px-3 *:rounded-full *:uppercase"
    >
        <span>{t("coreValues.openness")}</span>
        <span>{t("coreValues.assertiveness")}</span>
        <span>{t("coreValues.empathy")}</span>
        <span>{t("coreValues.fairness")}</span>
    </div>
</section>

<style define:vars={{ lineColor }}>
    h2 {
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        column-gap: 1rem;
        place-items: center;
    }

    h2::before,
    h2::after {
        content: "";
        height: 3px;
        width: 100%;
        background-color: var(--lineColor);
    }
</style>
